---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const { key ='', name = '', bioLong = [], links = {} } = Astro.props;
---

<div class="card">
  <div class="pfp-container">
    <img class="pfp" src={ `/src/assets/pfp-${key}.png` }></img>
  </div>

  <div>
    <h1>
      { name }
    </h1>
    <div class="bio-long">
      {bioLong.map(paragraph => <p>{paragraph}</p>)}
    </div>
  </div>
  
  <div class="button-container">
    {Object.entries(links).map(([site, url]) => (
        <a href={url} target="_blank" rel="noopener noreferrer">
          <Icon name={`platforms/${site}`}/>
        </a>
    ))}
    </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
    background-color: #00000010;
    border-radius: 1.618rem;
    max-width: 1000px;
  }

  .button-container {
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: flex-start;
    gap: 0.5rem;
    align-self: stretch;
  }

  .button-container svg {
    width: 1.375rem; /* 16px */
    height: 1.375rem; /* 16px */
  }

  .pfp-container {
    flex-shrink: 0;
    display: block;
    
  }

  h1 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
  }

  p {
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
  }

  img {
    width: 100%;
    border-radius: 1rem;
  }

  @media (min-width: 700px) {
    .card {
      display: flex;
      flex-direction: row;
      gap: 1rem;
      padding: 1.5;
      background-color: #00000010;
      border-radius: 2rem;
      max-width: 1000px;
      align-self: stretch;
    }
    
    .button-container {
      display: flex;
      flex-direction: column;
      justify-content: start;
      align-items: flex-start;
      gap: 0.5rem;
      align-self: stretch;
    }

    .pfp-container {
        flex-shrink: 0;
        display: block;
        width: 15rem;
    }
  }
</style>